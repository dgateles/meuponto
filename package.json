{
  "name": "meuponto",
  "version": "1.0.6",
  "description": "Aplicativo para automação de registro de ponto.",
  "main": "main.js",
  "scripts": {
    "start": "ELECTRON_ENABLE_LOGGING=true electron .",
    "build:win": "electron-builder -w --x64 --arm64 -p always",
    "build:mac": "electron-builder -m --x64 --arm64 -p always",
    "postinstall": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 npx playwright install --with-deps chromium"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cross-env": "^7.0.3",
    "electron-store": "7",
    "electron-updater": "^6.6.2",
    "playwright": "^1.53.0"
  },
  "build": {
    "appId": "com.meu-ponto.app",
    "productName": "Meu Ponto",
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "dgateles",
      "repo": "meuponto"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "images/icon.ico",
      "publisherName": "Meu Ponto",
      "nsis": {
        "oneClick": true,
        "allowToChangeInstallationDirectory": false,
        "runAfterFinish": true
      }
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "images/icon.png"
    }
  }
}
